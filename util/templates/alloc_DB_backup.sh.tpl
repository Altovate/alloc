#!/bin/bash

ALLOC_DB_PASS="CONFIG_VAR_ALLOC_DB_PASS"
ALLOC_DB_USER="CONFIG_VAR_ALLOC_DB_USER"
ALLOC_DB_NAME="CONFIG_VAR_ALLOC_DB_NAME"
BACKUP_DIR="CONFIG_VAR_ALLOC_DOCS_DIR"

TODAY=`date +%a`;

	if [ "${TODAY}" = "Sat" ]; then
  	TODAY=week`date +%U`;
	fi

BACKUP_FILE="${BACKUP_DIR}/allocdump.sql.${TODAY}"


mysqldump -d -u ${ALLOC_DB_USER} -p${ALLOC_DB_PASS} ${ALLOC_DB_NAME} > ${BACKUP_FILE}
mysqldump -t -u ${ALLOC_DB_USER} -p${ALLOC_DB_PASS} ${ALLOC_DB_NAME} >> ${BACKUP_FILE}
gzip -f ${BACKUP_FILE}

